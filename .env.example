# Server Configuration
PORT=3000
NODE_ENV=development

# Logging
LOG_LEVEL=info

# Scraper Configuration (Required)
SCRAPER_URL=https://himalayareload.otoreport.com/harga.js.php?id=YOUR_ID_HERE

# Scheduler Configuration (in milliseconds, 60000 = 1 minute)
UPDATE_INTERVAL=60000

# Telegram Configuration (Optional, for notifications)
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Get chat ID from forwarding a message to @userinfobot
TELEGRAM_CHAT_ID=your_chat_id_here

# Example values (replace with your actual values):
# TELEGRAM_BOT_TOKEN=1234567890:ABCDEF1234567890abcdef1234567890ABC
# TELEGRAM_CHAT_ID=123456789